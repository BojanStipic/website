---
import profileImage from "@/assets/profile.jpg";
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import { RSS_URL, SITE_DESCRIPTION, SITE_TITLE } from "@/consts";

type Props = {
  title: string;
  description?: string;
  imageUrl?: string;
};

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const title = `${Astro.props.title} | ${SITE_TITLE}`;
const description = Astro.props.description ?? SITE_DESCRIPTION;
const imageUrl = Astro.props.imageUrl ?? profileImage.src;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <style>
      @view-transition {
        navigation: auto;
      }
    </style>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title={SITE_TITLE}
      href={RSS_URL}
    />

    <link rel="canonical" href={canonicalUrl} />
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(imageUrl, Astro.url)} />
  </head>

  <body
    class="ctp-latte flex min-h-svh flex-col gap-8 bg-crust text-text dark:ctp-mocha"
  >
    <Header />

    <main class="flex-1">
      <slot />
    </main>

    <Footer />
  </body>
</html>
